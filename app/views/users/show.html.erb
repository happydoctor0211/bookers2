<h1>User info</h1>
 <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
 <p>Name <%= @user.name %></p>
 <p>Introduction <%= @user.introduction %></p>
 <% if @user.id == current_user.id %>
  <p><%= link_to "編集", edit_user_path(@user) %></p>
 <% else %>
  <p><%= link_to "編集", user_path(current_user.id) %></p>
 <% end %>

<h1>New book</h1>
<%= form_with model: @newbook,local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :body %> <br/>
 <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td>投稿ユーザー画像</td>
    <td>
      <%= link_to book_path(book.id) do %>
       <%= book.title %>
      <% end %>
    </td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>
