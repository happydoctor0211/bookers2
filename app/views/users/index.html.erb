<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
 <p>Name <%= @user.name %></p>
 <p>Introduction <%= @user.introduction %></p>
 <% if @user.id == current_user.id %>
  <p><%= link_to "編集", edit_user_path(@user) %></p>
 <% else %>
  <p><%= link_to "編集", user_path(current_user.id) %></p>
 <% end %>
 
<h1>New book</h1>
<%= form_with model: @newbook,local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :body %> <br/>
 <%= f.submit 'Create Book' %>
<% end %>


<h1>Users</h1>
<table>
  <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td>投稿ユーザー画像</td>
    <td>
       <%= user.name %>
    </td>
    <td><%= link_to "Show",user_path(user.id) %> </td>
  </tr>
  <% end %>
</table>
