

<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>User info</h1>

   <% if @user.errors.any? %>
    <p><%= @user.errors.count %>errors prohibited this obj from being saved: </p>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
   <% end %>

   <%= form_with model:@user, local:true do |f| %>
   <label for="inputName">Name</label> <br>

   <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%> <br>

   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
   <label for="inputImage">Image</label> <br>
   <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %> <br>

   <label for="inputIntroduction">Introduction</label> <br>
   <%= f.text_area :introduction, autofocus: true, id:"inputIntroductuon", placeholder:"自己紹介文" %> <br>
   <%= f.submit "Update User" %>

   <% end %>

  </div>
 </div>
</div>








