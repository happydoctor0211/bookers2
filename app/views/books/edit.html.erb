<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>Editing Book</h1>
   <% if @book.errors.any? %>
    <p><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
   <% end %>
   
   <%= form_with model:@book, local:true do |f| %>
    <label for="inputName">Title</label> <br>
    <%= f.text_field :title, autofocus: true, id:"inputTitle" %> <br>
    
    <label for="inputzOpinion">Opinion</label> <br>
     <%= f.text_area :body, autofocus: true, id:"inputOpinion" %> <br>
     <%= f.submit "Update Book" %>
   <% end %>
   <p> <%= link_to "Show", book_path(@book) %> |  <%= link_to "Back", books_path %></p>
  </div>
 </div>
</div>



 
  
 





 
 
  
