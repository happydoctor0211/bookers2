 
<div class="container">
 <div class="row">
  <div class="col-md-3">
   <h1>User info</h1>
   <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
   <% end %>
   <p>投稿ユーザー画像</p>
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
   <p>Name <%= @user.name %></p>
   <p>Introduction <%= @user.introduction %></p>
   <p>
    <%= link_to edit_user_path(@user) do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
   </p>
   <h1>New book</h1>
   <%= form_with model: @newbook,local:true do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>Opinion</h4>
   <%= f.text_area :body %> <br/>
   <%= f.submit 'Create Book' %>
   <% end %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h1>Book detail</h1>
   <table>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th></th>
    </tr>
    <tr>
     <td>
      <%= link_to user_path(@book.user_id) do %>
       <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
       <p><%= @user.name %></p>
      <% end %>
     </td>
     <td>
       <%= link_to book_path(@book) do %>
        <%= @book.title %></td>
       <% end %>
     <td><%= @book.body %></td>
     <td>
       <% if @user.id == current_user.id %>
        <p><%= link_to "Destroy", book_path(@book),method: :delete %> </p> 
        <p><%= link_to "Edit", edit_book_path(@book) %></p>
       <% end %>
     </td>
    </tr>
   </table>
  </div>
 </div>
</div>

 
 
 
 



 
 
 
 




